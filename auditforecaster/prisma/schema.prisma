generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ─── Authentication (NextAuth) ───────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("INSPECTOR")
  passwordHash  String?
  tokenVersion  Int       @default(1)
  accounts      Account[]
  sessions      Session[]

  // Google Calendar Integration
  googleCalendarId String?
  nextSyncToken    String?
  watchResourceId  String?
  watchExpiration  BigInt?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs                 Job[]
  equipment            Equipment[]
  equipmentAssignments EquipmentAssignment[]
  notifications        Notification[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ─── Schedule ────────────────────────────────────────────────────────────

model Job {
  id            String    @id @default(cuid())
  lotNumber     String
  streetAddress String
  city          String
  address       String
  status        String    @default("PENDING")
  scheduledDate DateTime?

  // Google Calendar Integration
  googleEventId  String? @unique
  googleHtmlLink String?

  inspectorId String?
  inspector   User?   @relation(fields: [inspectorId], references: [id])

  builderId String?
  builder   Builder? @relation(fields: [builderId], references: [id])

  subdivisionId String?
  subdivision   Subdivision? @relation(fields: [subdivisionId], references: [id])

  inspections  Inspection[]
  invoiceItems InvoiceItem[]

  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([inspectorId])
  @@index([builderId])
  @@index([subdivisionId])
  @@index([createdAt])
  @@index([scheduledDate])
  @@index([lotNumber])
  @@index([streetAddress])
}

model Builder {
  id           String   @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  contactInfo  String?
  paymentTerms String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  jobs         Job[]
  subdivisions Subdivision[]
  invoices     Invoice[]
}

model Subdivision {
  id        String  @id @default(cuid())
  name      String
  builderId String
  builder   Builder @relation(fields: [builderId], references: [id])
  jobs      Job[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([builderId])
}

// ─── Inspections ─────────────────────────────────────────────────────────

model Inspection {
  id    String @id @default(cuid())
  jobId String
  job   Job    @relation(fields: [jobId], references: [id])

  type   String @default("BLOWER_DOOR")
  status String @default("IN_PROGRESS")

  score    Float?
  maxScore Float?
  answers  String?
  metadata String?

  data         String
  signatureUrl String?

  photos      Photo[]
  actionItems ActionItem[]

  reportTemplateId String?
  reportTemplate   ReportTemplate? @relation(fields: [reportTemplateId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([jobId])
  @@index([reportTemplateId])
  @@index([createdAt])
}

model Photo {
  id       String  @id @default(cuid())
  url      String
  caption  String?
  category String?

  latitude  Float?
  longitude Float?
  takenAt   DateTime?

  inspectionId String
  inspection   Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inspectionId])
}

model ReportTemplate {
  id          String  @id @default(cuid())
  name        String
  description String?

  structure String?
  scoring   String?

  isDefault Boolean @default(false)

  inspections Inspection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActionItem {
  id          String  @id @default(cuid())
  title       String
  description String?
  status      String  @default("OPEN")
  priority    String  @default("MEDIUM")

  inspectionId String
  inspection   Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  assignedToEmail String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inspectionId])
  @@index([status])
}

// ─── Equipment ───────────────────────────────────────────────────────────

model Equipment {
  id              String    @id @default(cuid())
  name            String
  type            String
  serialNumber    String    @unique
  status          String    @default("ACTIVE")
  lastCalibration DateTime?
  nextCalibration DateTime?

  purchasePrice Float?
  purchaseDate  DateTime?

  assignedTo   String?
  assignedUser User?   @relation(fields: [assignedTo], references: [id])

  calibrationCertUrl String?
  assignments        EquipmentAssignment[]

  notes   String?
  version Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([assignedTo])
}

model EquipmentAssignment {
  id          String    @id @default(cuid())
  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  assignedAt DateTime @default(now())
  returnedAt DateTime?

  notes String?

  @@index([equipmentId])
  @@index([userId])
}

// ─── Finances ────────────────────────────────────────────────────────────

model Invoice {
  id          String   @id @default(cuid())
  number      String   @unique
  date        DateTime @default(now())
  dueDate     DateTime
  status      String   @default("DRAFT")
  totalAmount Float
  notes       String?
  pdfUrl      String?

  sentAt DateTime?
  paidAt DateTime?

  builderId String
  builder   Builder @relation(fields: [builderId], references: [id])

  items InvoiceItem[]

  version   Int       @default(1)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([builderId])
  @@index([status])
  @@index([date])
  @@index([deletedAt])
}

model InvoiceItem {
  id          String @id @default(cuid())
  description String
  quantity    Float  @default(1)
  unitPrice   Float
  totalPrice  Float

  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  jobId String?
  job   Job?   @relation(fields: [jobId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([invoiceId])
  @@index([jobId])
}

// ─── Admin / System ──────────────────────────────────────────────────────

model AuditLog {
  id         String  @id @default(cuid())
  entityType String
  entityId   String
  action     String
  actorId    String
  changes    String?
  ipAddress  String?

  createdAt DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([actorId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
}
