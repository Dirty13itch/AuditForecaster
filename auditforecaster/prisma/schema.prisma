generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("INSPECTOR")
  passwordHash  String?
  tokenVersion  Int       @default(1) // Security: For session revocation
  baseRate      Float?    // Base monthly rate for salaried subcontractors
  accounts      Account[]
  sessions      Session[]

  // Google Calendar Integration
  googleCalendarId String?
  nextSyncToken    String?
  watchResourceId  String?
  watchExpiration  BigInt?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs      Job[]
  vehicles  Vehicle[]
  equipment Equipment[]
  equipmentAssignments EquipmentAssignment[]
  expenses  Expense[]
  payouts   Payout[]
  routes    Route[]



  // Link to Builder for Builder Portal users
  builderId String?
  builder   Builder? @relation(fields: [builderId], references: [id])

  savedReports SavedReport[]
  certifications Certification[] // Consultant: Track specific cert details
  hersRaterId    String?         // Consultant: Critical for Ekotrope sync
  
  onboarding     OnboardingChecklist?
  apiKeys        ApiKey[]
  taskClaims     TaskClaim[]

  @@index([builderId])
}

model OnboardingChecklist {
  id               String  @id @default(cuid())
  uniformIssued    Boolean @default(false)
  ipadIssued       Boolean @default(false)
  badgePrinted     Boolean @default(false)
  trainingComplete Boolean @default(false)
  notes            String?
  
  userId           String  @unique
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Certification {
  id             String    @id @default(cuid())
  name           String    // e.g. "BPI Building Analyst", "RESNET HERS Rater"
  licenseNumber  String?
  issuedDate     DateTime?
  expirationDate DateTime?
  
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([userId])
}

model TaxCredit {
  id                String   @id @default(cuid())
  jobId             String   @unique
  job               Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  creditAmount      Float // e.g., 2500 or 5000
  certificationDate DateTime
  status            String // PENDING, SUBMITTED, APPROVED, DENIED
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Vehicle {
  id           String    @id @default(cuid())
  name         String
  licensePlate String    @unique
  vin          String?
  make         String
  model        String
  year         Int
  mileage      Int
  status       String    @default("ACTIVE") // ACTIVE, MAINTENANCE, RETIRED
  lastService  DateTime?
  nextService  DateTime?
  assignedTo   String?
  assignedUser User?     @relation(fields: [assignedTo], references: [id])
  notes        String?

  mileageLogs   MileageLog[]
  maintenance   VehicleMaintenance[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assignedTo])
  @@index([status])
}

model VehicleMaintenance {
  id            String    @id @default(cuid())
  date          DateTime
  type          String    // OIL_CHANGE, TIRE_ROTATION, REPAIR, INSPECTION
  cost          Float
  description   String?
  mileage       Int?      // Odometer reading at time of service
  
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([vehicleId])
  @@index([date])
}

model SavedReport {
  id            String    @id @default(cuid())
  name          String
  description   String?
  config        Json      // Stores selected columns, filters, sorting
  
  userId        String
  user          User      @relation(fields: [userId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model Equipment {
  id              String    @id @default(cuid())
  name            String // e.g., "Retrotec 5000"
  type            String // e.g., "Blower Door", "Duct Blaster", "Infrared Camera"
  serialNumber    String    @unique
  status          String    @default("ACTIVE") // ACTIVE, CALIBRATION_DUE, REPAIR, RETIRED
  lastCalibration DateTime?
  nextCalibration DateTime?
  
  purchasePrice   Float?    // Deep Layer: Financial tracking
  purchaseDate    DateTime?
  
  assignedTo      String?
  assignedUser    User?     @relation(fields: [assignedTo], references: [id])
  
  calibrationCertUrl String? // Deep Scope: Proof of compliance
  assignments     EquipmentAssignment[] // Deep Scope: Chain of Custody

  notes           String?
  version         Int       @default(1) // Optimistic Locking
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status])
  @@index([assignedTo])
}

model EquipmentAssignment {
  id          String    @id @default(cuid())
  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  assignedAt  DateTime  @default(now())
  returnedAt  DateTime?
  
  notes       String?   // Condition upon checkout/return

  @@index([equipmentId])
  @@index([userId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Builder {
  id           String   @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  contactInfo  String?
  paymentTerms String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  jobs         Job[]
  subdivisions Subdivision[]
  priceLists   PriceList[]
  plans        Plan[] // New relation to plans
  invoices     Invoice[]
  User         User[]
}

model Plan {
  id          String   @id @default(cuid())
  title       String
  description String?
  pdfUrl      String?
  builderId   String
  builder     Builder  @relation(fields: [builderId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([builderId])
}

model Subdivision {
  id         String      @id @default(cuid())
  name       String
  builderId  String
  builder    Builder     @relation(fields: [builderId], references: [id])
  jobs       Job[]
  priceLists PriceList[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([builderId])
}

model ServiceItem {
  id          String  @id @default(cuid())
  name        String
  description String?
  basePrice   Float

  priceListItems PriceListItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PriceList {
  id            String       @id @default(cuid())
  name          String
  builderId     String?
  builder       Builder?     @relation(fields: [builderId], references: [id])
  subdivisionId String?
  subdivision   Subdivision? @relation(fields: [subdivisionId], references: [id])

  items PriceListItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([builderId])
  @@index([subdivisionId])
}

model PriceListItem {
  id            String      @id @default(cuid())
  priceListId   String
  priceList     PriceList   @relation(fields: [priceListId], references: [id])
  serviceItemId String
  serviceItem   ServiceItem @relation(fields: [serviceItemId], references: [id])
  price         Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([priceListId, serviceItemId])
  @@index([priceListId])
  @@index([serviceItemId])
}

model Job {
  id              String    @id @default(cuid())
  lotNumber       String
  streetAddress   String
  city            String
  address         String
  status          String    @default("PENDING") // Was Enum JobStatus
  scheduledDate   DateTime?
  rejectionReason String?

  // Geocoding for weather and routing
  latitude  Float?
  longitude Float?

  // Google Integration
  googleEventId  String? @unique // Google Calendar Event ID
  googleHtmlLink String? // Link to event in Google Calendar
  googleAlbumId  String? // Google Photos Album ID
  googleAlbumUrl String? // Link to Google Photos Album

  // SupplyPro Integration
  buildProOrderId String? @unique
  buildProSyncedAt DateTime?

  // Ekotrope Integration
  ekotropeProjectId String?
  ekotropeSyncedAt  DateTime?
  hersScore         Int?
  hersCertUrl       String?

  inspectorId String?
  inspector   User?   @relation(fields: [inspectorId], references: [id])

  builderId String?
  builder   Builder? @relation(fields: [builderId], references: [id])

  subdivisionId String?
  subdivision   Subdivision? @relation(fields: [subdivisionId], references: [id])

  inspections Inspection[]
  taxCredit   TaxCredit?
  expenses    Expense[]
  invoiceItems InvoiceItem[]

  payoutId      String?
  payout        Payout?   @relation(fields: [payoutId], references: [id])
  payoutAmount  Float? // Snapshot of the amount paid for this job
  
  routeStops    RouteStop[]

  version       Int      @default(1) // Optimistic Locking
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([inspectorId])
  @@index([builderId])
  @@index([subdivisionId])
  @@index([payoutId])
  @@index([createdAt])
  @@index([scheduledDate])
  @@index([lotNumber]) // Search optimization
  @@index([streetAddress]) // Search optimization
}

model Inspection {
  id    String @id @default(cuid())
  jobId String
  job   Job    @relation(fields: [jobId], references: [id])

  type   String @default("BLOWER_DOOR") // Was Enum InspectionType
  status String @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED

  // iAuditor Parity Fields
  score    Float?
  maxScore Float?
  answers  Json? // Structured responses matching the template
  metadata Json? // Device info, location, duration, etc.

  data         String // Legacy: Was Json (keep for migration if needed, or deprecate)
  checklist    String? // Legacy: Was Json
  signatureUrl String?

  photos      Photo[]
  actionItems ActionItem[]

  reportTemplateId String?
  reportTemplate   ReportTemplate? @relation(fields: [reportTemplateId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([jobId])
  @@index([reportTemplateId])
  @@index([createdAt])
}

model Photo {
  id       String  @id @default(cuid())
  url      String
  caption  String?
  category String? // e.g., "Exterior", "Attic"

  // Metadata from EXIF or upload
  latitude  Float?
  longitude Float?
  takenAt   DateTime?

  inspectionId String
  inspection   Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inspectionId])
}

model ReportTemplate {
  id          String  @id @default(cuid())
  name        String
  description String?

  // iAuditor Parity Fields
  structure Json? // Full definition: pages, sections, items, logic
  scoring   Json? // Scoring configuration: weights, max scores

  checklistItems String? // Legacy: JSON definition (keep for migration)
  isDefault      Boolean @default(false)

  inspections Inspection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActionItem {
  id          String  @id @default(cuid())
  title       String
  description String?
  status      String  @default("OPEN") // OPEN, RESOLVED
  priority    String  @default("MEDIUM") // LOW, MEDIUM, HIGH, CRITICAL

  inspectionId String
  inspection   Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)

  assignedToEmail String? // Email of the builder/super

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inspectionId])
  @@index([status])
}

model Expense {
  id     String   @id @default(cuid())
  date   DateTime
  amount Float

  category    String? // Travel, Equipment, Meals, etc. (Optional for pending)
  status      String  @default("PENDING") // PENDING, CLASSIFIED
  description     String?
  rejectionReason String?
  receiptUrl      String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  jobId String?
  job   Job?    @relation(fields: [jobId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([jobId])
}

model MileageLog {
  id       String   @id @default(cuid())
  date     DateTime
  distance Float

  purpose       String? // Business, Personal (Optional for pending)
  status        String  @default("PENDING") // PENDING, CLASSIFIED
  startLocation String?
  endLocation   String?

  vehicleId String
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

model Subcontractor {
  id     String  @id @default(cuid())
  name   String
  type   String // Individual, Company
  email  String?
  phone  String?
  taxId  String? // Consider encryption in app layer if needed
  status String  @default("ACTIVE")

  complianceDocs ComplianceDoc[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ComplianceDoc {
  id             String    @id @default(cuid())
  type           String // W9, COI, License
  url            String
  expirationDate DateTime?

  subcontractorId String
  subcontractor   Subcontractor @relation(fields: [subcontractorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([subcontractorId])
}

model CorporateDoc {
  id    String   @id @default(cuid())
  title String
  type  String // Bylaws, Minutes, TaxReturn
  url   String
  date  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Invoice {
  id          String   @id @default(cuid())
  number      String   @unique // e.g., INV-2024-001
  date        DateTime @default(now())
  dueDate     DateTime
  status      String   @default("DRAFT") // DRAFT, SENT, PAID, VOID, OVERDUE
  totalAmount Float
  notes       String?
  pdfUrl      String?

  sentAt      DateTime?
  paidAt      DateTime?

  builderId   String
  builder     Builder @relation(fields: [builderId], references: [id])

  items       InvoiceItem[]

  version     Int      @default(1) // Optimistic Locking
  deletedAt   DateTime? // Soft Delete
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([builderId])
  @@index([status])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  description String
  quantity    Float    @default(1)
  unitPrice   Float
  totalPrice  Float

  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  jobId       String?
  job         Job?    @relation(fields: [jobId], references: [id]) // Optional link to a job

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([invoiceId])
  @@index([jobId])
}



model SystemLog {
  id        String   @id @default(cuid())
  level     String   // "INFO", "WARN", "ERROR"
  message   String
  context   Json?
  userId    String?
  createdAt DateTime @default(now())

  @@index([level])
  @@index([createdAt])
}

model ApiKey {
  id        String   @id @default(cuid())
  name      String   // e.g. "Zapier Integration"
  keyHash   String   @unique
  scopes    String[] // "READ_JOBS", "WRITE_JOBS"
  lastUsed  DateTime?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model AuditLog {
  id         String   @id @default(cuid())
  entityType String   // "Job", "Inspection", "User"
  entityId   String
  action     String   // "CREATE", "UPDATE", "DELETE"
  actorId    String   // User ID or API Key ID
  changes    Json?    // { before: {}, after: {} }
  ipAddress  String?
  
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([actorId])
}


model Payout {
  id          String    @id @default(cuid())
  periodStart DateTime
  periodEnd   DateTime
  amount      Float
  status      String    @default("DRAFT") // DRAFT, PAID
  
  generatedAt DateTime  @default(now())
  paidAt      DateTime?

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  jobs        Job[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Route {
  id            String      @id @default(cuid())
  date          DateTime
  status        String      @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  totalDistance Float?      // in miles
  totalDuration Int?        // in minutes
  
  driverId      String
  driver        User        @relation(fields: [driverId], references: [id])
  
  stops         RouteStop[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([driverId])
  @@index([date])
}

model RouteStop {
  id               String    @id @default(cuid())
  order            Int
  estimatedArrival DateTime?
  status           String    @default("PENDING") // PENDING, COMPLETED, SKIPPED
  
  routeId          String
  route            Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  jobId            String?
  job              Job?      @relation(fields: [jobId], references: [id])

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([routeId])
  @@index([jobId])
}

model IntegrationLog {
  id        String   @id @default(cuid())
  service   String   // SUPPLYPRO, EKOTROPE, GOOGLE
  action    String   // JOB_INGESTION, SYNC, UPLOAD
  success   Boolean
  jobId     String?
  request   String?  // JSON string
  response  String?  // JSON string or error message
  error     String?

  createdAt DateTime @default(now())

  @@index([jobId])
  @@index([createdAt])
}

model IntegrationSettings {
  id                         String  @id @default(cuid())
  ekotropeApiKey             String?
  ekotropeEnabled            Boolean @default(false)
  supplyProApiKey            String?
  supplyProEnabled           Boolean @default(false)
  autoCreateJobsFromBuildPro Boolean @default(true)
  autoSyncToEkotrope         Boolean @default(true)
  autoGenerateHERSCerts      Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskClaim {
  id        String   @id @default(cuid())
  taskId    String   // ID of the job/inspection being claimed
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([taskId]) // Only one active claim per task
  @@index([expiresAt]) // For cleanup
  @@index([userId])
}
