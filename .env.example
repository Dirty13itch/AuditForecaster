# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/energy_audit_db

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# PostgreSQL Connection Details (auto-extracted from DATABASE_URL in production)
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=energy_audit_db

# Object Storage (Optional - Replit Object Storage)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# Error Monitoring (Optional - Sentry)
SENTRY_DSN=
VITE_SENTRY_DSN=

# Session Replay (Optional)
# Set to 'true' to enable session replay in production
# Note: Only loads in production to avoid costs and dev clutter
VITE_SESSION_REPLAY_ENABLED=false

# Session Replay Provider
# Options: 'logrocket', 'fullstory', 'hotjar', 'clarity'
VITE_SESSION_REPLAY_PROVIDER=logrocket

# Provider-specific App ID
# Get this from your session replay service dashboard
VITE_LOGROCKET_APP_ID=your-app-id-here

# External Integrations (Optional)
# Add your API keys for external services here
# EXAMPLE_API_KEY=your-key-here

# Analytics Provider (Optional)
# Choose one: 'posthog', 'mixpanel', or 'segment'
# Leave commented out to use logging-only mode
# ANALYTICS_PROVIDER=posthog

# PostHog Configuration (if using PostHog)
# POSTHOG_API_KEY=your-posthog-key
# POSTHOG_HOST=https://app.posthog.com

# Mixpanel Configuration (if using Mixpanel)
# MIXPANEL_TOKEN=your-mixpanel-token

# Segment Configuration (if using Segment)
# SEGMENT_WRITE_KEY=your-segment-write-key
